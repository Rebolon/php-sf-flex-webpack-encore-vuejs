{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <h5 class="welcome">Welcome to</h5>
    the demo of Symfony 5+ / Webpack encore / Vuejs / Quasar / DevExtreme
    <h6 class="hint">You can login with test_php/test</h6>

    {% if error %}
    <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('demo_login_standard_check') }}" method="post">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="login_username" value="{{ last_username }}" class="form-control" />
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="login_password" class="form-control" />
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ token }}"
        >

        <button type="submit" class="btn btn-primary">login</button>
    </form>
</div>
{% endblock %}
