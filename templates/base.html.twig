<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="/favicon.ico" />
        {% block head %}
            <title>{% block title %}Demo sf-flex-encore-vuejs{% endblock %}</title>
        {% endblock %}

        {% if csrf_token is defined %}
        <meta name="{{ csrfTokenParameter }}" content="{{ csrf_token }}">
        {% endif %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('js/vendor') }}
        {% endblock %}

        {# using builtin twig symfony encore package i cannot use preloading like before (for instance)
        {%  if preventParentJs is not defined or not preventParentJs %}
        <!-- preload JS -->
        <link rel="preload" href="{{ asset('dist/manifest.js') }}" as="script"/>
        <link rel="preload" href="{{ asset("dist/vendor.js") }}" as="script"/>
        <link rel="preload" href="{{ asset("dist/service-worker.js") }}" as="script"/>
        {% endif %}
        #}
    </head>
    {# mat is for quasar, dx-* are for devextrem, it should be configurable @todo #}
    <body class="dx-theme-generic dx-theme-generic-typography dx-color-scheme-light mat">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <h1><a href="/"><u>Demo of symfony 4</u></a>
                <span style="font-size: smaller">with flex,
                    <span style="font-size: smaller">and webpack/encore,
                        <span style="font-size: smaller">VueJS,
                            <span style="font-size: smaller">ApiPlatform,
                                <span style="font-size: smaller">HttpPlug,...</span>
                            </span>
                        </span>
                    </span>
                </span>
            </h1>
        </nav>
        {% block body %}{% endblock %}

        {%  if preventParentJs is not defined or not preventParentJs %}
            {{ encore_entry_script_tags('service-worker') }}
        {% endif %}
        {% block javascripts %}
            {{ encore_entry_script_tags('js/vendor') }}
        {% endblock %}
    </body>
</html>
