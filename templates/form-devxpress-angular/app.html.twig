{% extends 'spa-devextrem.html.twig' %}

{% block head %}
    <meta charset="utf-8">
    <base href="/demo/form/devxpress-angular">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">

    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('js/vendor') }}

    {# this one is generated by --extract-css option from build command #}
    {% for cssFile in ngFiles.css %}
    <link rel="stylesheet" type="text/css" href="{{ cssFile }}" />
    {% endfor %}

    <!-- preload JS -->
    {% for jsFile in ngFiles.js %}
    <link rel="preload" href="{{ jsFile }}" as="script"/>
    {% endfor %}
{% endblock %}

{% block body %}
    <app-root></app-root>
{% endblock %}

{% block javascripts %}
    {% for jsFile in ngFiles.js %}
    <script type="text/javascript" src="{{ jsFile }}"></script>
    {% endfor %}
{%  endblock %}
